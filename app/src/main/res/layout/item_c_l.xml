<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_father"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="10dp">


    <TextView
        android:id="@+id/charger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/charge_detail"
        android:drawablePadding="10dp"
        android:text="ffdsfsdfsdfdfdsfdsf"
        android:textColor="@color/myRed"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/charger_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/charger_name"
        android:layout_marginTop="12dp"
        android:text="状态："
        android:textColor="@color/middletext_color" />

    <TextView
        android:id="@+id/charger_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/charger_status"
        android:layout_marginTop="11dp"
        android:text="ffdsfsdfsdfdfdsfdsf"
        android:textColor="@color/middletext_color" />

    <TextView

        android:id="@+id/charger_use_gonglv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/charger_type"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/charger_type"
        android:text="ffdsfsdfsdfdfdsfdsf"
        android:textColor="@color/middletext_color" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/jiantouxuanze" />


</RelativeLayout>