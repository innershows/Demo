<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        tools:context="com.example.yichongbao.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/myRed"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:text="个人信息"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="头像"
                        android:textColor="@color/myRed" />

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:onClick="onClick"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/small_avatar" />
                </RelativeLayout>

                <TextView style="@style/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="姓名"
                        android:textColor="@color/myRed" />

                    <EditText
                        android:id="@+id/tv_nickname"
                        android:textColor="@color/middletext_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="张三" />
                </RelativeLayout>

                <TextView style="@style/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="性别"
                        android:textColor="@color/myRed" />

                    <RelativeLayout
                        android:id="@+id/tg_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/switch_background"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/choose_sex"
                                android:layout_width="0dp"
                                android:clickable="true"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:onClick="onClick">

                                <TextView
                                    android:id="@+id/tv_girl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/switch_hot_circle"
                                    android:text="女"
                                    android:textColor="@color/myRed" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_boy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:onClick="onClick"
                                    android:text="男"
                                    android:textColor="@color/myRed" />


                            </RelativeLayout>


                        </LinearLayout>

                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/bg" />

                <TextView
                    android:id="@+id/tvv_car_pinpai"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableLeft="@null"
                    android:drawableRight="@drawable/jiantouxuanze"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="爱车品牌"
                    android:textColor="@color/myRed" />

                <TextView style="@style/line" />

                <TextView
                    android:id="@+id/tvv_car_type"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableRight="@drawable/jiantouxuanze"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="爱车型号"
                    android:textColor="@color/myRed" />

                <TextView style="@style/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="车牌"
                        android:textColor="@color/myRed" />

                    <EditText
                        android:id="@+id/et_car_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="粤A17B95"
                        android:textColor="@color/middletext_color" />
                </RelativeLayout>
            </LinearLayout>


            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="确定"
                android:textColor="@android:color/white" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>